{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": false,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "resolveJsonModule" : true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths":{
      "../controllers/*": ["../controllers/*"],
      "../Models/*" : ["../models/*"],
      "../database/*" : ["../database/*"],
      "../routes/*" : ["../routes/*"],
      "../services/*" : ["../services/*"]
    }

  }
}
